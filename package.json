{
  "name": "ng-antd-workspace",
  "version": "0.0.1-alpha.2",
  "license": "MIT",
  "description": "Project used to explore Angular component design best practice",
  "main": "index.js",
  "repository": "https://github.com/trotyl/ng-antd.git",
  "author": "Trotyl <trotyl@qq.com>",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "yarn build:es5",
    "build:es5": "ng build --prod --output-hashing none --no-progress",
    "prebuild:es2015": "sed -i -e 's/\"target\": \"es5\"/\"target\": \"es2015\"/g' tsconfig.json",
    "build:es2015": "ng build --prod --output-hashing none --no-progress --output-path dist2015",
    "test": "ng test --single-run --no-progress --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "theme": "lessc theme/index.less built/site.css",
    "generate": "ng-packagr -p src/lib/package.json",
    "postgenerate": "cp node_modules/antd/dist/*.css* publish/bundles/",
    "release": "cd publish && npm publish",
    "integration:cli": "cd integration/angular-cli && npm run integration",
    "pregh-build": "yarn theme",
    "gh-build": "ng build --prod --base-href /ng-antd/ --no-progress",
    "postgh-build": "cp dist/index.html dist/404.html && cp -r .circleci/ dist/.circleci/",
    "deploy": "gh-pages -d dist -t",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "private": true,
  "dependencies": {
    "@angular-contrib/core": "^0.0.1",
    "@angular/animations": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "core-js": "^2.5.5",
    "less": "^2.7.3",
    "prismjs": "^1.14.0",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.0",
    "@angular/cdk": "^6.0.1",
    "@angular/cli": "^6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/language-service": "^6.0.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "antd": "^3.0.1",
    "codecov": "^3.0.0",
    "codelyzer": "^4.3.0",
    "conventional-changelog-cli": "^1.3.22",
    "gh-pages": "^1.1.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.4.2",
    "protractor": "~5.1.2",
    "tsickle": "^0.27.5",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "typescript": "~2.7.2"
  }
}
